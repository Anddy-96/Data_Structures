#include <stdio.h>
#include <stdlib.h>
 struct node
 {
  int x;
  struct node *y;
 };
 void printList(struct node *n)
 {
   while(n != NULL)
   {
     printf("%d\n",n->x);
     n = n->y;
   }
 }
  void Choose(struct node *n)
 {
   printf("Select the operations:\n");
   printf("\t1.Add Elemet.\n\t2.Add at Beginning.\n\t3.Remove first.\n\t5.Remove last.\n\t6.Remove at particular index\n\t7.Remove value.\n\t8.Get Index of particular value\n");
   printList(n);
 }
int main(void) {
  int r;
  printf("Select:\n\t1.Use Default Link List\n\t2.Make your own Link List\n");
