  {
    
  }
  else
  {
    printf("Enter the number of nodes you want in linklist:\n");
  int i,b;
  scanf("%d",&b);
  struct node *n, *t, *h;
  int z;
  n = (struct node *)malloc(b * sizeof(struct node));
  h = (struct node*)malloc(sizeof(struct node));
  for(i=0;i<b;i++)
  {
    printf("Enter node %d value:\n",i+1);
    scanf(" %d", &z);
    (n+i)->x = z;
    if(i>0)
    {
      (n+i-1)->y = (n+i); 
    }
  }
  (n+b-1)->y = NULL;
  h->x = n->x;
  if(b == 1)
  {
    h->y = NULL;
  }
  else
  {
    h->y = n+1;
  }
